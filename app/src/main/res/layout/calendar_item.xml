<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <TextView
        android:id="@+id/date_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textColor="@color/soft_blue"
        android:textSize="20sp"/>
    <TextView
        android:layout_toRightOf="@id/date_number"
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="  -  "/>
    <LinearLayout
        android:id="@+id/l_layout"
        android:layout_below="@id/date_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/team_logo_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/calendar_localteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="equipo1"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/calendar_goals_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/match_hour"
                android:layout_below="@id/calendar_goals_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/calendar_visitorteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="equipo2"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/team2_logo_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"/>
    </LinearLayout>

    <TextView
        android:id="@+id/championship_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liga Aguila - II"
        android:layout_toRightOf="@id/separator"
        android:textColor="@color/soft_blue"
        android:textSize="17sp"
        android:paddingBottom="1dp"
        android:layout_above="@id/l_layout"/>

</RelativeLayout>